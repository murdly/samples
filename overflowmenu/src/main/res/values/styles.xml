<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <!--OVERFLOW MENU-->
    <style name="OverflowMenu">
        <item name="android:background">@drawable/overflow_menu_background</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="OverflowMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="OverflowMenuTextItem" parent="OverflowMenuItem">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="OverflowMenuItemSeparator">
        <item name="android:background">#e5e5e5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>
    <!--end of OVERFLOW MENU-->

</resources>
